{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": "off",
        "no-underscore-dangle": ["error", {"allow": ["_id"]}],
        "indent": ["error", "tab"],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-unused-vars": "off",
        "no-param-reassign": "off",
        "comma-dangle": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
